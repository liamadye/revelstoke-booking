{
    "name": "Revelstoke Booking Workspace",
    "build": {
        "dockerfile": "../Dockerfile",
        "context": ".."
    },
    "overrideCommand": true,
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            }
        }
    },
    "forwardPorts": [
        3000
    ],
    // We use the exact install logic that worked manually
    "postCreateCommand": "npm install -g vercel --prefix /usr/local && (ln -s /root/host-home/.gitconfig /root/.gitconfig || true) && echo 'export PATH=$PATH:/usr/local/bin' >> ~/.bashrc",
    "remoteUser": "root",
    "mounts": [
        "source=${localEnv:HOME}/.vercel,target=/root/.vercel,type=bind,consistency=cached",
        // Mounting the HOME folder prevents the "Device Busy" error
        "source=${localEnv:HOME},target=/root/host-home,type=bind,consistency=cached"
    ]
}